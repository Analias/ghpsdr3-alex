##
## external packages
##
package require Tcl
package require snit

##
## our own sdr libraries
##

package require sdr::dspserver
package require sdr::ui-one

##
## the global, at least those admitted to
##
set ::radio {};			# radio widget

proc verbose-puts {msg} { if {[::dspserver cget -verbose]} { puts stderr $msg } }

##
## constants
##

# build the radio
sdr::dspserver ::dspserver -service [sdr::get-last service]
set ::radio ::dspserver

# load configuration
# current options
# memories
# last tuned points

# process arguments
proc optarg {opt} {
    upvar argc argc argv argv i i
    if {$i == $argc-1} { uplevel error "missing arg for $opt option" }
    if {$opt eq {-local}} {
	# puts "optarg found -local"
	$::radio add-local [lindex $argv [incr i]]
    } else {
	$::radio configure $opt [lindex $argv [incr i]]
    }
    verbose-puts "optarg $opt found [lindex $argv $i]"
}

# specify options and create radios
for {set i 0} {$i < $argc} {incr i} {
    # accumulate arguments
    set opt [lindex $argv $i]
    switch -- $opt {
	-b - --band { optarg -band }
	-c - --connect { $::radio connect }
	-e - --filter { optarg -filter }
	-f - --frequency { optarg -frequency }
	-l - --local - --local-server { optarg -local }
	-m - --mode { optarg -mode }
	-n - --name - --name-of-server { optarg -name }
	-s - --service { optarg -service }
	-t - --text { optarg -text }
	-u - --ui { optarg -ui }
	-v - --verbose { optarg -verbose }
	default { error "unrecognized option [lindex $argv $i]" }
    }
}

vwait forever
